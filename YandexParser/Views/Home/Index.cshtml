@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function OnBegin() {
        $('#search-button').button('loading');
    }
    function OnSuccess() {
        $('#search-button').button('reset');
    }
</script>

<h2>Search</h2>
@using (Ajax.BeginForm("Search", new RouteValueDictionary(), new AjaxOptions()
{
    UpdateTargetId = "results",
    OnBegin = "OnBegin",
    OnSuccess = "OnSuccess"
}, new Dictionary<string, object>() { { "class", "form-search" } }))
{
    <div class="input-append">
        <input type="text" name="query" class="span6 search-query" style="height: 40px;font-size: 20pt;">
        <button type="submit" id="search-button" class="btn btn-large btn-success" data-loading-text="<i class='icon-spin icon-spinner icon-large'></i>">
            <i class="icon-search icon-large"></i>
        </button>
    </div>
}
<div id="results"></div>