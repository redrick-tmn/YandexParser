@using YandexParser.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Yandex searcher @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @Scripts.Render("~/Scripts/tableGen.js")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("scripts", required: false)
</head>
<body>
    
    <div class="container-narrow">

        <div>
            <ul class="nav nav-pills pull-right">
                @foreach (var link in new[]
                    {
                        new { Name = "Home", Action = "Index", Controller = "Home" },
                        new { Name = "Queries", Action = "Queries", Controller = "Home" }
                    })
                {
                    var liClass = Html.IsCurrent(link.Action, link.Controller) ? "active" : string.Empty;
                    
                    <li class="@liClass">@Html.ActionLink(link.Name, link.Action, link.Controller)</li>
                } 
            </ul>
            <h2 class="muted"><i class="icon-search"></i> Yandex searcher</h2>
        </div>
        <hr/>
        <div class="jumbotron">@RenderBody()</div>
    </div>

</body>
</html>
